{
  "version": "2.0",
  "description": "Simple voice navigation commands. Add route and voice patterns to enable navigation.",
  
  "commands": [
    {
      "route": "/dashboard",
      "patterns": ["dashboard", "go to dashboard", "open dashboard", "show dashboard"]
    },
    {
      "route": "/admin",
      "patterns": ["admin", "go to admin", "open admin", "admin panel", "administration"]
    },
    {
      "route": "/admin/students",
      "patterns": ["students", "student", "go to students", "open students", "show students", "student management", "student list"]
    },
    {
      "route": "/admin/classes",
      "patterns": ["classes", "class", "go to classes", "open classes", "show classes", "class management", "class list"]
    },
    {
      "route": "/admin/sections",
      "patterns": ["sections", "section", "go to sections", "open sections", "show sections", "section management"]
    },
    {
      "route": "/admin/routine",
      "patterns": ["routine", "schedule", "timetable", "go to routine", "open schedule", "show timetable", "class schedule"]
    },
    {
      "route": "/admin/attendance",
      "patterns": ["attendance", "go to attendance", "open attendance", "show attendance", "mark attendance"]
    },
    {
      "route": "/staff",
      "patterns": ["staff", "teacher", "teachers", "go to staff", "open staff", "show staff", "staff management"]
    }
  ],
  
  "settings": {
    "language": "en-US",
    "confidenceThreshold": 0.65
  }
}
